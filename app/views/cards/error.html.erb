<div class="main">
  <div class="layer">
    <div class="container">
      <h1>Check a Porker Hand</h1>
      <div class="checkarea">
        <%= form_tag("/check") do %>
        <ul class="form">
          <li><input class="text" name="card_set" value="<%= params[:card_set]%>"></li>
          <li><input class="btn" type="submit" value="Check"></li>
        </ul>
        <% end %>
        <ul class="errors_message">
          <% @hand.errors.each do |error| %>
          <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
