<div class="main">
  <div class="layer">
    <div class="container">
      <h1>Check a Porker Hand</h1>
      <div class="checkarea">
        <%= form_tag("/check") do %>
          <div class="form">
            <ul>
              <li>
                <textarea name="hand"><%= params[:hand]%></textarea>
              </li>
              <li>
                <input type="submit" value="Check">
              </li>
            </ul>
          </div>
          <div class="result">
            <p>
               <%= @hand.result %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
